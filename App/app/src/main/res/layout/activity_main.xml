<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- 顶部搜索区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white">

        <!-- 扫描图标 -->
        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_scan"
            android:contentDescription="扫描" />

        <!-- 搜索框 -->
        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/search_background"
            android:hint="搜索功能、课程、直播、图书、人员"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp"
            android:singleLine="true" />

        <!-- 机器人图标 -->
        <ImageView
            android:id="@+id/iv_robot"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_robot"
            android:contentDescription="智能助手" />

    </LinearLayout>

    <!-- 中间功能网格区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 第一行功能 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <!-- 事务待办 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/iv_todo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_todo"
                        android:background="@drawable/icon_background"
                        android:contentDescription="事务待办" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="事务待办"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- 日程管理 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/iv_calendar"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_calendar"
                        android:background="@drawable/icon_background"
                        android:contentDescription="日程管理" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="日程管理"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- 建行学习 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/iv_learning"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_learning"
                        android:background="@drawable/icon_background"
                        android:contentDescription="建行学习" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="建行学习"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- 知识百科 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/iv_knowledge"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_knowledge"
                        android:background="@drawable/icon_background"
                        android:contentDescription="知识百科" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="知识百科"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- 员工福利 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/iv_benefits"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_benefits"
                        android:background="@drawable/icon_background"
                        android:contentDescription="员工福利" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="员工福利"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

            <!-- 第二行功能 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_marginTop="16dp">

                <!-- 员工差旅 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/iv_travel"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_travel"
                        android:background="@drawable/icon_background"
                        android:contentDescription="员工差旅" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="员工差旅"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- 请休假 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/iv_leave"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_leave"
                        android:background="@drawable/icon_background"
                        android:contentDescription="请休假" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请休假"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- 产品服务 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/iv_products"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_products"
                        android:background="@drawable/icon_background"
                        android:contentDescription="产品服务" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="产品服务"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- 人力资源 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/iv_hr"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_hr"
                        android:background="@drawable/icon_background"
                        android:contentDescription="人力资源" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="人力资源"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

                <!-- 更多功能 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/iv_more"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_more"
                        android:background="@drawable/icon_background"
                        android:contentDescription="更多功能" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更多功能"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- 底部导航栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/nav_bg"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- 首页 -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iv_nav_home"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                android:contentDescription="首页" />

            <TextView
                android:id="@+id/tv_nav_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textSize="12sp"
                android:textColor="@color/selected_blue"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- 人员 -->
        <LinearLayout
            android:id="@+id/nav_people"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iv_nav_people"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_people"
                android:contentDescription="人员" />

            <TextView
                android:id="@+id/tv_nav_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人员"
                android:textSize="12sp"
                android:textColor="@color/nav_text_selector"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- 消息 -->
        <LinearLayout
            android:id="@+id/nav_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iv_nav_message"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_message"
                android:contentDescription="消息" />

            <TextView
                android:id="@+id/tv_nav_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息"
                android:textSize="12sp"
                android:textColor="@color/nav_text_selector"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- 我的 -->
        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iv_nav_profile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile"
                android:contentDescription="我的" />

            <TextView
                android:id="@+id/tv_nav_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textSize="12sp"
                android:textColor="@color/nav_text_selector"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
